@using TaskManager.Models.ViewModels.Tasks
@model EditTaskViewModel
    <form class="mx-auto col-md-6" method="post" asp-controller="Tasks" asp-action="Edit">
        <input class="taskId" name="taskId" id="taskId" value="@Model.Id" hidden />
        <hr class="hr-style" />
        <div class="form-group">
            <div class="text-center">
                <label asp-for="Content"></label>
            </div>
            <textarea style="resize: none" rows="14" asp-for="Content" class="form-control" placeholder="Content..."></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="text-center">
                <label asp-for="AssignedTo"></label>
            </div>
            <input asp-for="AssignedTo" type="text" class="form-control" placeholder="Assign to..." />
            <span asp-validation-for="AssignedTo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="text-center">
                <label asp-for="RequiredByDate"></label>
            </div>
            <input asp-for="RequiredByDate" type="text" class="form-control" placeholder="Example: 02.09.2015" />
            <span asp-validation-for="RequiredByDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="text-center">
                <label asp-for="Statuses"></label>
            </div>
            <input asp-for="Statuses" type="text" class="form-control" placeholder="Statuses..." />
            <span asp-validation-for="Statuses" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="text-center">
                <label asp-for="Types"></label>
            </div>
            <input asp-for="Types" type="text" class="form-control" placeholder="Types..." />
            <span asp-validation-for="Types" class="text-danger"></span>
        </div>
        <hr class="hr-style" />
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-dark">Edit Task</button>
        </div>
    </form>